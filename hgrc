[ui]
username = Matthew McPherrin <git@mcpherrin.ca>

[extensions]
hgext.bookmarks =
hgext.convert =
hgext.record =
color =
pager =
mq =

[color]
mode = ansi

[pager]
pager = less -FRXi

[hooks]
# Prevent "hg pull" if MQ patches are applied.
prechangegroup.mq-no-pull = ! hg qtop > /dev/null 2>&1
# Prevent "hg push" if MQ patches are applied.
preoutgoing.mq-no-push = ! hg qtop > /dev/null 2>&1

[defaults]
diff=-U 8 -p
qdiff=-U 8

[diff]
git=true
showfunc=true
unified=8
